[Unit]
Description=NSQ daemon
After=network.target
After=runlevel2.target
After=runlevel3.target
After=runlevel4.target
After=runlevel5.target
[Service]
EnvironmentFile=<%= @basic[:libhome] %>/env.sh
ExecStart=<%= @basic[:home] %>/nsqd/bin/nsqd --lookupd-tcp-address=localhost:4160 -data-path=<%= @basic[:libhome] %>/nsqd
KillMode=process
